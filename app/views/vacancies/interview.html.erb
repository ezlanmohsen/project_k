<div style="background-color: yellow">
	<h3>NOTES FOR DEMONSTRATION</h3>
	<ol>
	</ol>
</div>

<h3>Company Profile</h3>
<div>
	Name: <%= @company.name %><br>
	State: <%= @company.state.name %><br>
	Industry: <%= @company.industry.name %><br>
</div>

<h3>Vacancy Details</h3>
<div>
	Role: <%= @vacancy.name %><br>
	Description: <%= @vacancy.description %><br>
	Department: <%= @vacancy.department %><br>
	Quantity Needed: <%= @vacancy.quantity %><br>
</div>

<br>
<br>
<br>

<div>
	<h4>Your Talent Pool!</h4>
	<div>
		<% @matches.each do |match| %>
				Candidate Number: <%= match.jobseeker.id %><br>
				Degree in: <%= match.jobseeker.degree.name %><br>
				University: <%= match.jobseeker.university.name %>
				<br><br><br>
		<% end %>
	</div>
</div>

<div>
	<h4>Choose your interview questions!</h4>
	<h5>You can choose between 5-10 questions with a total duration of 120 seconds!</h5>
	<div>
		<%=form_for @vacancy do |form|%>
			<div>
				<%= form.label :question_1 %> 
				<%= form.select(:question_1, Vacancy::QUESTION_LIST, {:required => true}) %>

				<%= form.label :seconds %> 
				<%= form.select :q1_time, ((10..30).step(5).map {|i| [i,i] } << [40,10]) %>
			</div>

			<div>
				<%= form.label :question_2 %> 
				<%= form.select(:question_2, Vacancy::QUESTION_LIST, {:required => true}) %>

				<%= form.label :seconds %> 
				<%= form.select :q2_time, ((10..30).step(5).map {|i| [i,i] } << [40,10]) %>
			</div>
			<div>
				<%= form.label :question_3 %> 
				<%= form.select(:question_3, Vacancy::QUESTION_LIST, {:required => true}) %>

				<%= form.label :seconds %> 
				<%= form.select :q3_time, ((10..30).step(5).map {|i| [i,i] } << [40,10]) %>
			</div>
			<div>
				<%= form.label :question_4 %> 
				<%= form.select(:question_4, Vacancy::QUESTION_LIST, {:required => true}) %>

				<%= form.label :seconds %> 
				<%= form.select :q4_time, ((10..30).step(5).map {|i| [i,i] } << [40,10]) %>
			</div>
			<div>
				<%= form.label :question_5 %> 
				<%= form.select(:question_5, Vacancy::QUESTION_LIST, {:required => true}) %>

				<%= form.label :seconds %> 
				<%= form.select :q5_time, ((10..30).step(5).map {|i| [i,i] } << [40,10]) %>
			</div>			
		
			<%=form.submit 'Submit your vacancy!'%>
		<% end %>
	</div>
</div>







